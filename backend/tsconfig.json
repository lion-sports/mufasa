{
  "extends": "adonis-preset-ts/tsconfig.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "App/*": [
        "./app/*"
      ],
      "Config/*": [
        "./config/*"
      ],
      "Contracts/*": [
        "./contracts/*"
      ],
      "Database/*": [
        "./database/*"
      ]
    },
    "types": [
      "@adonisjs/core",
      "@adonisjs/repl",
      "@japa/preset-adonis/build/adonis-typings",
      "@adonisjs/auth",
      "@adonisjs/lucid",
      "@adonisjs/attachment-lite",
      "@adonisjs/redis",
      "@adonisjs/view",
      "@adonisjs/session",
      "@adonisjs/mail",
      "@adonisjs/limiter",
      "@likable-hair/breeze"
    ]
  }
}
