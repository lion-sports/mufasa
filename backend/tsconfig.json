{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": ".",
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "isolatedModules": false,
    "paths": {
      "#controllers/*": [
        "./app/Controllers/*.js"
      ],
      "#exceptions/*": [
        "./app/Exceptions/*.js"
      ],
      "#models/*": [
        "./app/Models/*.js"
      ],
      "#services/*": [
        "./app/Services/*.js"
      ],
      "#listeners/*": [
        "./app/listeners/*.js"
      ],
      "#events/*": [
        "./app/events/*.js"
      ],
      "#middleware/*": [
        "./app/Middleware/*.js"
      ],
      "#validators/*": [
        "./app/Validators/*.js"
      ],
      "#start/*": [
        "./start/*.js"
      ],
      "#config/*": [
        "./config/*.js"
      ],
      "#app/*": [
        "./app/*.js"
      ],
      "#database/*": [
        "./database/*.js"
      ],
      "#contracts/*": [
        "./contracts/*.js"
      ]
    },
    "types": [],
    "strictPropertyInitialization": false
  }
}