{
  "name": "lion-backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "bull": "node ace bull:listen",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "seed:superuser": "node ace db:seed --files \"./database/seeders/1_SuperUser.ts\"",
    "seed:permissions": "node ace db:seed --files \"./database/seeders/Permission.ts\"",
    "migrate": "node ace migration:run",
    "test": "node ace test",
    "test:functional": "node ace test functional",
    "test:managers": "node ace test managers"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.7.0",
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@japa/preset-adonis": "^1.1.0",
    "@japa/runner": "^2.0.9",
    "@symfony/webpack-encore": "^4.3.0",
    "adonis-preset-ts": "^2.1.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "pino-pretty": "^8.0.0",
    "postcss": "^8.4.23",
    "postcss-loader": "^7.3.0",
    "prettier": "^2.6.2",
    "tailwindcss": "^3.3.2",
    "typescript": "~4.6",
    "webpack": "^5.83.1",
    "webpack-cli": "^5.1.1",
    "youch": "^3.2.0",
    "youch-terminal": "^2.1.4"
  },
  "dependencies": {
    "@adonisjs/ally": "^4.1.4",
    "@adonisjs/attachment-lite": "^1.0.7",
    "@adonisjs/auth": "^8.2.1",
    "@adonisjs/core": "^5.8.3",
    "@adonisjs/limiter": "^1.0.2",
    "@adonisjs/lucid": "^18.0.1",
    "@adonisjs/mail": "^8.2.0",
    "@adonisjs/redis": "^7.3.2",
    "@adonisjs/repl": "^3.1.11",
    "@adonisjs/session": "^6.4.0",
    "@adonisjs/view": "^6.2.0",
    "@likable-hair/breeze": "file:../breeze",
    "@poppinss/utils": "^5.0.0",
    "@types/adm-zip": "^0.5.0",
    "@vue/compiler-sfc": "^3.3.4",
    "adm-zip": "^0.5.10",
    "exceljs": "^4.3.0",
    "luxon": "^2.4.0",
    "mjml": "^4.14.1",
    "node-xlsx": "^0.21.0",
    "pg": "^8.7.3",
    "phc-argon2": "^1.1.3",
    "proxy-addr": "^2.0.7",
    "puppeteer": "^19.4.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.5.4",
    "source-map-support": "^0.5.21",
    "vue": "^3.3.4",
    "vue-loader": "^17.1.1"
  }
}
